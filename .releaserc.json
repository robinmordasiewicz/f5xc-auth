{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "style", "release": "patch" },
          { "scope": "auth", "release": "patch" },
          { "type": "chore", "scope": "auth", "release": "patch" },
          { "type": "test", "scope": "auth", "release": "patch" },
          { "type": "build", "scope": "auth", "release": "patch" },
          { "type": "chore", "release": false },
          { "type": "test", "release": false },
          { "type": "build", "release": false },
          { "type": "ci", "release": false },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features" },
            { "type": "fix", "section": "ğŸ› Bug Fixes" },
            { "type": "perf", "section": "âš¡ Performance Improvements" },
            { "type": "revert", "section": "âª Reverts" },
            { "type": "docs", "section": "ğŸ“š Documentation" },
            { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
            { "type": "test", "section": "âœ… Tests", "hidden": true },
            { "type": "build", "section": "ğŸ”¨ Build System", "hidden": true },
            { "type": "ci", "section": "ğŸ‘· CI/CD", "hidden": true },
            { "type": "chore", "section": "ğŸ”§ Chores", "hidden": true }
          ]
        }
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "tarballDir": "dist-npm"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist-npm/*.tgz",
            "label": "npm package"
          }
        ],
        "successComment": "ğŸ‰ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:\n\nThe release is available on:\n- [npm package (@latest)](https://www.npmjs.com/package/@robinmordasiewicz/f5xc-auth)\n- [GitHub release](${releases[0].url})\n\n---\n\nğŸ¤– Automated release by [semantic-release](https://github.com/semantic-release/semantic-release)"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "package-lock.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
